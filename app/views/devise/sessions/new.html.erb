<%= stylesheet_link_tag "login" %>
<div class="container h-100">
  <div class="d-flex justify-content-center h-100">
    <div class="user_card">
      <div class="d-flex justify-content-center">
        <div class="brand_logo_container">
          <img
            class="brand_logo"
            alt="Logo"
          />
        </div>
      </div>
      <div class="d-flex justify-content-center form_container">
        <%= form_for(resource, as: resource_name, url:
        session_path(resource_name)) do |f| %>
        <div class="input-group mb-3">
          <div class="input-group-append">
            <span class="input-group-text"><i class="fas fa-user"></i></span>
          </div>
          <!-- Input email -->
          <div class="field">
            <%= f.email_field :email , placeholder: "Email", autofocus: true,
            autocomplete: "email", class: "form-control input_user"%>
          </div>
        </div>

        <div class="input-group mb-2">
          <div class="input-group-append">
            <span class="input-group-text"><i class="fas fa-key"></i></span>
          </div>
          <div class="field">
            <%= f.password_field :password, placeholder:
            "Password",autocomplete: "current-password", class: "form-control input_pass" %>
          </div>
        </div>
        <div class="form-group">
          <div class="custom-control custom-checkbox">
            <div class="field">
              <%= f.check_box :remember_me, class: "custom-control-input", id: "customControlInline" %> <%= f.label :remember_me, class: "custom-control-label" %>
            </div>
          </div>
        </div>
        <div class="actions d-flex justify-content-center mt-3 login_container">
          <%= f.submit "Log in", class: "btn login_btn" %>
        </div>
        <% end %>
      </div>
      <div class="mt-4">
        <div class="d-flex justify-content-center links">
          Don't have an account? <%= link_to "Sign up",
          new_user_registration_path%>
        </div>
        <div class="d-flex justify-content-center links">
          <%= link_to "Forget Your Password?",
          new_user_password_path %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>

</script>
